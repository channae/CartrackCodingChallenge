<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user_detail.UserDetailFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/activity_horizontal_double_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_double_margin"
        android:layout_marginTop="@dimen/activity_horizontal_double_margin"
        android:layout_marginRight="@dimen/activity_horizontal_double_margin"
        android:text="Name"
        android:textColor="@color/text_color_lighter"
        android:textSize="@dimen/text_size_large" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_edit_text_height"
        android:layout_marginLeft="@dimen/activity_horizontal_double_margin"
        android:layout_marginRight="@dimen/activity_horizontal_double_margin"
        android:textColor="@color/text_color_dark"
        android:textSize="@dimen/text_size_xlarge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/activity_horizontal_double_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_double_margin"
        android:layout_marginTop="@dimen/activity_horizontal_double_margin"
        android:layout_marginRight="@dimen/activity_horizontal_double_margin"
        android:text="Username"
        android:textColor="@color/text_color_lighter"
        android:textSize="@dimen/text_size_large" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_edit_text_height"
        android:layout_marginLeft="@dimen/activity_horizontal_double_margin"
        android:layout_marginRight="@dimen/activity_horizontal_double_margin"
        android:textColor="@color/text_color_dark"
        android:textSize="@dimen/text_size_xlarge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/activity_horizontal_double_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_double_margin"
        android:layout_marginTop="@dimen/activity_horizontal_double_margin"
        android:layout_marginRight="@dimen/activity_horizontal_double_margin"
        android:text="Email"
        android:textColor="@color/text_color_lighter"
        android:textSize="@dimen/text_size_large" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_edit_text_height"
        android:layout_marginLeft="@dimen/activity_horizontal_double_margin"
        android:layout_marginRight="@dimen/activity_horizontal_double_margin"
        android:textColor="@color/text_color_dark"
        android:textSize="@dimen/text_size_xlarge" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/activity_horizontal_double_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_double_margin"
        android:layout_marginTop="@dimen/activity_horizontal_double_margin"
        android:layout_marginRight="@dimen/activity_horizontal_double_margin"
        android:text="Address"
        android:textColor="@color/text_color_lighter"
        android:textSize="@dimen/text_size_large" />

    <TextView
        android:id="@+id/tv_address_suite"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/login_edit_text_height"
        android:layout_marginLeft="@dimen/activity_horizontal_double_margin"
        android:layout_marginRight="@dimen/activity_horizontal_double_margin"
        android:textColor="@color/text_color_dark"
        android:textSize="@dimen/text_size_xlarge" />

    <TextView
        android:id="@+id/tv_address_street"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/login_edit_text_height"
        android:layout_marginLeft="@dimen/activity_horizontal_double_margin"
        android:layout_marginRight="@dimen/activity_horizontal_double_margin"
        android:textColor="@color/text_color_dark"
        android:textSize="@dimen/text_size_xlarge" />

    <TextView
        android:id="@+id/tv_address_city"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/login_edit_text_height"
        android:layout_marginLeft="@dimen/activity_horizontal_double_margin"
        android:layout_marginRight="@dimen/activity_horizontal_double_margin"
        android:textColor="@color/text_color_dark"
        android:textSize="@dimen/text_size_xlarge" />

    <TextView
        android:id="@+id/tv_address_zip_code"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/login_edit_text_height"
        android:layout_marginLeft="@dimen/activity_horizontal_double_margin"
        android:layout_marginRight="@dimen/activity_horizontal_double_margin"
        android:textColor="@color/text_color_dark"
        android:textSize="@dimen/text_size_xlarge" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mv_user_location"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="@dimen/activity_horizontal_double_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_double_margin"
        android:layout_marginTop="@dimen/activity_horizontal_double_margin"
        android:layout_marginRight="@dimen/activity_horizontal_double_margin" />


</LinearLayout>
